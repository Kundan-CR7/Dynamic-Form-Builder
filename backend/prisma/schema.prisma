generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Form {
  id        String   @id @default(uuid())
  title     String
  schema    Json
  uiSchema  Json
  createdAt DateTime @default(now())
  responses Response[]
}

model Response {
  id        String   @id @default(uuid())
  formId    String
  data      Json
  createdAt DateTime @default(now())

  form      Form @relation(fields: [formId], references: [id], onDelete: Cascade)
}
